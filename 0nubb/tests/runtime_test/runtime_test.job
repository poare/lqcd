#!/bin/bash

##ulimit -c unlimited

#SBATCH --job-name=runtime_test
#SBATCH --nodes=1
#SBATCH --ntasks-per-node=4
#SBATCH --partition=long
#SBATCH -t 48:00:00

set -x

# cd /data/wombat/users/mlwagman/mosaic
cd /home/poare/lqcd/mosaic

bash
module load openmpi/3.1.5
#module load qlua
module load qlua/20200107
# module load qlua/20200107-gpu1080
#module load qlua/20201002

EXE=qlua

# whether to only compute current correlators, or to compute operator correlators as well
operators=true

test="runtime_test"
home=/home/poare/lqcd/0nubb
logs=${home}/logs/tests/${test}/logs
output=/data/d10b/users/poare/0nubb/output/tests/${test}

# cfgpath="/data/d10b/ensembles/RBC/RBC_UKQCD_24_64/"
cfgpath="/home/poare/lqcd/0nubb/tests/runtime_test/configs/"
cfgbase="2+1f_24nt64_IWASAKI_b2.13_ls16_M1.8_ms0.04_mu0.005"
cfg=1200
parameters="jobid = ${SLURM_JOB_ID} cfgpath = '${cfgpath}' cfgbase = '${cfgbase}' cfgnum = '${cfg}'"
export OMP_NUM_THREADS=6

mpirun -np 4 $EXE -e "$parameters" ${home}/tests/${test}/${test}.qlua > ${logs}/job${SLURM_JOB_ID}.txt
