function show_propagator(m)
  local nc = m:colors()
  for ci = 0, nc - 1 do
    for cj = 0, nc - 1 do
      for si = 0, qcd.Ns - 1 do
        printf("U[%d,%d,%d,.] ", ci,cj,si)
        for sj = 0, qcd.Ns - 1 do
          local zv = m[{c=ci,d=si}]
          local z = zv[{c=cj,d=sj}]
          printf("  [%1.12e %1.12e]", z[{0, 0, 0, 0}]:real(), z[{0, 0, 0, 0}]:imag())
        end
        printf("\n")
      end
    end
  end
  printf("\n")
end

