        <version>10</version>
        <quarkSpinType>FULL</quarkSpinType>
        <obsvP>true</obsvP>
        <numRetries>1</numRetries>
        <FermionAction>
         <FermAct>NEF</FermAct>
         <OverMass>1.8</OverMass>
         <Mass>0.1</Mass>
         <N5>8</N5>
         <b5>1.0</b5>
         <c5>0.0</c5>
